<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/devel_mode_fake_add_new_items_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start fake add new items task"
        android:visibility="gone" />

    <Button
        android:id="@+id/devel_mode_fake_add_new_items_with_error_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start fake add new itmes task (ends with error)"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playlist_thumb_img"
            android:layout_width="80dp"
            android:layout_height="80sp"
            android:layout_margin="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_yashlang_thumb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playlist_name_txt"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/playlist_url_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playlist_items_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/check_initial_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_new_items_in_playlist" />

            <ProgressBar
                android:id="@+id/check_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/check_error_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/failed_to_load_new_items" />

                <TextView
                    android:id="@+id/check_error_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <Button
                android:id="@+id/check_new_items_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/check_for_new_items" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_new_items_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/add_new_items_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playlist_new_items_add_task_progress_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/adding_playlist_new_items" />

        <TextView
            android:id="@+id/playlist_new_items_add_task_enqueued_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playlist_import_task_queued" />

        <TextView
            android:id="@+id/playlist_new_items_add_task_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/playlist_new_items_add_task_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/playlist_new_items_add_task_canceled_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playlist_import_task_canceled" />

            <TextView
                android:id="@+id/playlist_new_items_add_task_error_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>


        <Button
            android:id="@+id/playlist_new_items_add_task_retry_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/retry" />

        <Button
            android:id="@+id/playlist_new_items_add_task_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/playlist_new_items_add_task_dismiss_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dismiss" />

    </LinearLayout>

</LinearLayout>

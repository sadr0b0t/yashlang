<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPlaylistActivity">

    <Button
        android:id="@+id/devel_mode_fake_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start fake add task"
        android:visibility="gone" />

    <Button
        android:id="@+id/devel_mode_fake_add_with_error_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start fake add task (ends with error)"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/playlist_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/playlist_url_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="web"
                android:hint="@string/channel_or_playlist_url"
                android:inputType="textUri" />

            <ImageButton
                android:id="@+id/playlist_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:borderlessButtonStyle"
                android:src="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_empty_initial_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|fill_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/pt_or_yt" />

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/add_new_playlist" />

            <Button
                android:id="@+id/playlist_search2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/search" />

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/playlist_load_progress_view"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/playlist_load_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|fill_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="@string/pt_or_yt" />

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/failed_to_load_list" />

            <TextView
                android:id="@+id/playlist_load_error_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark" />

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/playlist_reload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/reload" />

            <Button
                android:id="@+id/playlist_search3_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_loaded_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playlist_thumb_img"
                    android:layout_width="80dp"
                    android:layout_height="80sp"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_yashlang_thumb" />

                <TextView
                    android:id="@+id/playlist_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="22sp" />
            </LinearLayout>

            <Button
                android:id="@+id/playlist_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add" />

            <LinearLayout
                android:id="@+id/playlist_loaded_empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_items_in_playlist" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playlist_add_task_progress_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playlist_add_task_pl_thumb_img"
                android:layout_width="80dp"
                android:layout_height="80sp"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_yashlang_thumb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/playlist_add_task_pl_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/playlist_add_task_pl_url_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/adding_playlist" />

            <TextView
                android:id="@+id/playlist_add_task_enqueued_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playlist_import_task_queued" />

            <TextView
                android:id="@+id/playlist_add_task_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ProgressBar
                    android:id="@+id/playlist_add_task_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyle"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/playlist_add_task_canceled_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/playlist_import_task_canceled" />

                <TextView
                    android:id="@+id/playlist_add_task_error_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/playlist_add_task_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@android:string/cancel" />

            <Button
                android:id="@+id/playlist_add_task_retry_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/retry" />

            <Button
                android:id="@+id/playlist_add_task_dismiss_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dismiss" />

            <Button
                android:id="@+id/playlist_add_task_add_another_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/playlist_add_another" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

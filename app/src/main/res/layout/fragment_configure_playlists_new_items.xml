<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/devel_mode_fake_add_new_items_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start fake add new items task"
        android:visibility="gone" />

    <Button
        android:id="@+id/devel_mode_fake_add_new_items_with_error_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start fake add new itmes task (ends with error)"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/playlist_items_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/check_initial_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_new_items_in_playlist" />

            <ProgressBar
                android:id="@+id/check_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/check_error_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/failed_to_load_new_items" />

                <TextView
                    android:id="@+id/check_error_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/check_all_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_all_playlists" />

                <RadioButton
                    android:id="@+id/check_only_enabled_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/check_only_enabled_playlists" />
            </RadioGroup>

            <Button
                android:id="@+id/check_new_items_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/check_for_new_items" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_new_items_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/add_new_items_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_all" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playlists_new_items_add_tasks_progress_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/adding_playlist_new_items" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/playlists_new_items_add_tasks_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ProgressBar
                android:id="@+id/playlists_new_items_add_tasks_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/playlists_new_items_add_tasks_done_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/playlists_new_items_add_tasks_have_canceled_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/playlists_new_items_add_tasks_have_errors_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/playlists_new_items_add_tasks_retry_all_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/retry" />

        <Button
            android:id="@+id/playlists_new_items_add_tasks_cancel_all_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/playlists_new_items_add_tasks_dismiss_all_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dismiss" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_thumb_img"
        android:layout_width="120dp"
        android:layout_height="120sp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_yashlang_thumb" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name_txt"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/playlist_url_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>

    <Switch
        android:id="@+id/playlist_onoff_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/playlist_checked_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="5dp"
        android:textSize="28sp"
        android:enabled="false"
        android:text="✓"
        android:visibility="gone" />

    <TextView
        android:id="@+id/playlist_waiting_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="5dp"
        android:textSize="28sp"
        android:enabled="false"
        android:text="⌛"
        android:visibility="gone" />
</LinearLayout>